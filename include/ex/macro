#ifndef    EX_HEADER_HEADER
#   define EX_HEADER_HEADER


// Get count of elements in array
#define ARRAY_LENGTH(array)     (sizeof(array)/sizeof(array[0]))


// Convert language id 's' to literal, LITERAL(some_id) -> "some_id"
#define LITERAL(s)              __LITERAL(s)   // same as __LITERAL, but unfold all macro in s
#   define __LITERAL(s)         #s             // convert language id 's' to literal, __LITERAL(some_id) -> "some_id"


#endif