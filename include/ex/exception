#ifndef    EX_EXCEPTION_HEADER
#   define EX_EXCEPTION_HEADER


#include "ex/string"


namespace ex
{


template <class E, typename... Args>
void throw_formatted(const char* format, Args... args)
{
	char buff[string::kFormatBufferSize];
	throw E(sprint(buff, sizeof(buff), format, args...) ? buff : (char*)format);
}


template <class E, typename... Args>
void throw_formatted(const StringA& format, Args... args)
{
	char buff[string::kFormatBufferSize];
	throw E(sprint(buff, sizeof(buff), format.c_str(), args...) ? buff : (char*)format.c_str());
}


}

#endif